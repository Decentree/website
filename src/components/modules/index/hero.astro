---
import HeroBackground from "../../elements/index/hero/hero-background.astro"
import HeroText from "../../elements/index//hero/hero-text.astro"
import HeroPartners from "../../elements/index/hero/hero-partners.astro"
---

<section class="h-screen min-h-[700px] relative grid-def bg-primary-blue">
	<img src="/images/decoration.svg" class="absolute right-0 bottom-0 h-full opacity-50 md:opacity-100" alt="Dekorace" draggable={false}
		loading="lazy" />
	<img src="/images/decoration-left.svg" class="absolute left-0 bottom-0 max-h-[190px] hidden md:block" alt="Dekorace"
		draggable={false} loading="lazy" />
	<HeroBackground />
	<HeroText>
		<h1 class="text-2xl md:text-5xl my-0 md:leading-tight">Web3 full stack<br />development</h1>
		<hr class="w-[80px] m-0 border-primary-green border-t-1 my-6">
		<p class="text-base md:text-lg md:max-w-4/7 my-0" style="text-shadow: 2px 1px 3px rgba(0,0,0,0.81);">
			Sorry, we are currently winding down our operations and are not taking on new projects.
		</p>
	</HeroText>
</section>