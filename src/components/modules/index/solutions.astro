---
import Solution from "../../elements/index/solutions/solution.svelte";
import Email from "../../elements/shared/icons/email.astro"
const { solutions } = Astro.props as { solutions: ISolution[] };
---

<section class="bg-primary-blue py-10 relative text-center px-8 md:px-12 md:py-20 flex flex-col items-center"
	id="solutions">

	<img src="/images/solutions-bg.jpeg" class=" z-0 absolute -top-[170px] opacity-80 mix-blend-exclusion "
		style="filter: blur(4px)" alt="Solution" draggable={false} loading="lazy">
	<div class="md:max-w-2/3">
		<h2 class="text-4xl md:text-5xl my-2">Our Solutions</h2>
		<p class="text-lg">
			We offer 4 primary solutions, but they include a lot of important items in themselves. How can each solution help
			your business? Click on the square to find out more!</p>
	</div>
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 mt-14 w-full gap-5">
		{solutions.map((solution, index) =>
		(<Solution imgPath={solution.imgPath} name={solution.name} position={index+1} length={solutions.length} steps={[{label: "Wireframing", icon: '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9 3H5C4.46957 3 3.96086 3.21071 3.58579 3.58579C3.21071 3.96086 3 4.46957 3 5V9M9 3H19C19.5304 3 20.0391 3.21071 20.4142 3.58579C20.7893 3.96086 21 4.46957 21 5V9M9 3V21M9 21H19C19.5304 21 20.0391 20.7893 20.4142 20.4142C20.7893 20.0391 21 19.5304 21 19V9M9 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V9M3 9H21" stroke="#6BB891" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/></svg>'},]} tags={["Design", "Programming"]}
			client:visible>
		</Solution>)
		)}
	</div>
</section>