---
import Member from "../../elements/index/team/member.astro";
import { IMember } from '../../../interfaces/IMember';

const {members} = Astro.props as {members: IMember[]}
---
<section class="pt-10 md:pt-20 flex flex-col items-center text-center" id="team">
    <div class="md:max-w-2/3 spacing-def">
        <h2 class="text-4xl md:text-5xl my-2">Our Team</h2>
        <p class="text-lg">
        These are the studio's major leaders and founders. Each has a team of brilliant employees reporting to them, each focusing on a different aspect of our services.</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-15 mb-20 justify-center z-1">
        {members.map(({name, email, linkedin, imgPath, facebook, position }, index)=>(<data-aos data-aos="fade-down" data-aos-delay={(index)*200} data-aos-duration="500"><Member name={name} email={email} linkedin={linkedin} imgPath={imgPath} facebook={facebook} position={position}/></data-aos>))}
    </div>
</section>