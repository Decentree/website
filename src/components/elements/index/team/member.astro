---
import FacebookIcon from "../../shared/icons/facebook.astro";
import LinkedinIcon from "../../shared/icons/linkedin.astro";

import {IMember} from "../../../../interfaces/IMember";

const {name, email, facebook, linkedin, imgPath, position} = Astro.props as IMember;

---
<div class="bg-secondary-blue rounded-sm max-w-[230px] md:max-w-[250px] ">
    <img class="w-full object-cover rounded-sm" src={"/images/team/" + imgPath} alt={name} loading="lazy" draggable="false" />
    <div class="px-8 py-6 min-h-[170px] md:h-[180px]">
        <div>
             <span class="text-sm  mt-2 font-medium text-gray-300">{position}</span>
            <h3 class="text-xl my-0 mt-1">{name}</h3>
            <a class="text-sm hover:underline text-primary-green my-0" href={"mailto:" + email}>{email}</a>
            
        </div>
        <div class="flex flex-wrap justify-center gap-x-8 mt-4">
            {linkedin && <a href={linkedin} target="_blank" aria-label="linkedin"><LinkedinIcon /></a>}
        </div>
    </div>
</div>