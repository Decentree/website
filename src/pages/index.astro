---
	import BaseLayout from "../components/layouts/base.astro";
	import Hero from "../components/modules/index/hero.astro";
	import Navbar from "../components/elements/shared/navbar.svelte";
	import Projects from "../components/modules/index/projects.svelte";
	import Solutions from "../components/modules/index/solutions.astro";
	import Technologies from "../components/modules/index/technologies.astro";
	import Team from "../components/modules/index/team.astro";
	import Contact from "../components/modules/index/contact.svelte";
	import Footer from "../components/elements/shared/footer.astro";

	import { projects } from "../constants/projects";
	import { solutions } from "../constants/solutions";
	import { members } from "../constants/members";

	import { SEO } from "astro-seo";
	import StructuredData from "../components/elements/shared/structured-data.astro"

---
<html lang="en" class="bg-primary-blue">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<SEO
			title="Decentree - Developer studio"
			canonical="https://decentree.com"
			description="Decentree is a young company that specializes in the development of mobile, online, and blockchain apps. At Decentree we believe in the ability of technology to enhance people's lives on a daily basis." 
			extend={{
   				link: [{ rel: "sitemap", href: "/sitemap.xml" }, { rel: "favicon", href: "/favicon.ico" }, {rel:"manifest", href:"/manifest.json"}],					
			 }}
			openGraph={{
				basic: {
					title: "Decentree - Developer studio", 
					type: "website",
					url: "https://decentree.com",
					image: ""
				}
			}}
		/>
		<StructuredData/>
		<link rel="preload" href="/fonts/Montserrat-Black.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="/fonts/Montserrat-Light.woff2" as="font" type="font/woff2" crossorigin>
		<script async key="google-analytics" type="text/partytown" src="https://www.googletagmanager.com/gtag/js?id=G-37G72ELFWH"></script>
		<script key="google-analytics-config" type="text/partytown">
			  window.dataLayer = window.dataLayer || [];
				function gtag(){dataLayer.push(arguments);}
				gtag('js', new Date());
				gtag('config', 'G-37G72ELFWH');
		</script>		
		<script async key="smartlook" type="text/partytown">
			 	window.smartlook||(function(d) {
				var o=smartlook=function(){ o.api.push(arguments)},h=d.getElementsByTagName('head')[0];
				var c=d.createElement('script');o.api=new Array();c.async=true;c.type='text/javascript';
				c.charset='utf-8';c.src='https://web-sdk.smartlook.com/recorder.js';h.appendChild(c);
				})(document);
				smartlook('init', 'f8a8f9a486e0ff0edaad7fd67433c66fe35058fb', { region: 'eu' });
		</script>
		<script key="leady" type="text/partytown">
			(function(g,t){g.type="text/javascript";g.async=true;g.src="https://c"+"t.l"
			+"eady.com/Razk8l9n8fWgXI6i/L"+".js";t=t[0];t.parentNode.insertBefore(g,t)})
			(document.createElement("script"), document.getElementsByTagName("script"));
		</script>
	</head>
	<body>
		<BaseLayout>
			<Navbar client:media="(max-width: 800px)"/>
			<Hero/>
			<Projects projects={projects} client:load/>
			<Solutions solutions={solutions}/>
			<Technologies/>
			<Team members={members}/>
			<Contact client:visible/>
		</BaseLayout>
		<Footer/>
		<script defer>if ('serviceWorker' in navigator) window.addEventListener('load', () => navigator.serviceWorker.register('sw.js').catch(()=>{}))</script>
	</body>
</html>